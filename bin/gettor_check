# :license: This is Free Software. See LICENSE for license information.

cd ;
virtualenv gettor/venv
source gettor/venv/bin/activate

python3 gettor/scripts/check_service $1

# store exit status
status=$?

if test $status -ne 0
then
  ./home/gettor/bin/gettor_service start
fi
